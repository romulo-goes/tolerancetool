MODULE control(state)
	VAR action:{a,b};
ASSIGN
init(action):=b;
next(action) :=b;
MODULE main
	VAR
	state: 0..3;
	ctr: control(next(state));
ASSIGN
	init(state):=0;
	next(state):= case
		state=0 & ctr.action = a:{0, 1, 2};
		state=0 & ctr.action = b:{0, 1, 2};
		state=1 & ctr.action = b:{0, 2};
		state=1 & ctr.action = a:{2};
		state=2 & ctr.action = a:{0};
		state=2 & ctr.action = b:{1};
		TRUE:3;
	esac;
